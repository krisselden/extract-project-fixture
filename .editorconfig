root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{ts,js,cjs,mjs}]
quote_type = single
max_line_length = 80

[*.hbs]
insert_final_newline = false

[*.{diff,md,patch}]
trim_trailing_whitespace = false
